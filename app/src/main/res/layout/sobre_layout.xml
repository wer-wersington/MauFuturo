<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393E46"
    android:orientation="vertical"
    tools:context=".SobreActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#222831"
        android:gravity="center"
        android:text="Sobre"
        android:textColor="#D9D9D9"
        android:textSize="65dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:text="Este aplicativo tem o objetivo de mostrar as melhores formas de um vilão de verdade destruir uma cidade do futuro, nele você pode aprender diversas formas de praticar maldades e coisas abominaveis. A ideia veio quando pensamos sobre a falta de atitudes maléficas nessas cidades, e esse aplicativo ira te ajudar nos seus esquemas."
        android:textColor="#D9D9D9"
        android:textSize="20dp" />

</LinearLayout>